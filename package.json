{
  "name": "lean-typescript",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npm run prisma:generate && tsc -p tsconfig.build.json && ts-add-js-extension add --dir=dist",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:db-push": "prisma db push && prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:watch": "prisma generate --watch",
    "stop": "pkill -f 'nodemon|tsx src/index.ts|prisma generate --watch' || true"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "fastify": "^5.6.2",
    "mysql2": "^3.15.3",
    "prisma": "^6.19.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "ts-add-js-extension": "^1.6.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
